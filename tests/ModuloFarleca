cv::Mat image = cv::imread(argv[1]);
if (image.empty())
{
    std::cout << "!!! Failed imread()" << std::endl;
    return -1;
}
cv::Mat threshold_image;

// MIN B:77 G:0 R:30    MAX B:130 G:68 R:50
cv::inRange(image, cv::Scalar(77, 0, 30), //son unos parametros aleatorios , ya los cambias 
                   cv::Scalar(130, 68, 50), 
                   threshold_image);

cv::bitwise_not(threshold_image, threshold_image); 

cv::imwrite("so_inrange.png", threshold_image);
